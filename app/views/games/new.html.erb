<h1> Welcome to the longest word-game! </h1>

<p id = "alphabet"> <%= @alphabet%>   </p>


<form action="/score" method="post">
  <input type="text" name="word" placeholder="What is the longest word you can find?">
  <input type="submit">
  <%= hidden_field_tag :alphabet, @alphabet %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
